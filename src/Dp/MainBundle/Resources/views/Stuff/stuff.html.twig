<div class="row">
    <div class="col-sm-9">
        <h1>{{ stuff.name }} - {{ stuff.classe.name }}, Niveau {{ stuff.lvl }}</h1>
        <h2>{{ stuff.keyword }}</h2>
    </div>
    <div class="col-sm-3">
        {{ include('FbrVoteBundle:Vote:default.html.twig', {'id': stuff.id, 'element': 'Stuff', 'vote': vote}) }}

    </div>
</div>
<div class="row">
    <div class="stuff jumbotron col-sm-8">
        <div class="col-sm-2">
            {% set i = "" %}
            {% for sd in stuff.stuffdetails %}
                {% if sd.item.itemtype.itemglobaltype.id is defined and sd.item.itemtype.itemglobaltype.id is not empty and sd.item.itemtype.itemglobaltype.id == 4 %}
                    <div class='cdr-small'>
                        <img src="{{ asset(['bundles/dpmain/images/item/', sd.item.id, '.png']|join) }}" alt="{{ sd.item.name }} image not found" class="img-responsive img-item-small" data-toggle="modal" data-target="#modal-item{{ sd.item.id }}" />
                    </div>
                    {% set i=i+1 %}
                {% endif %}
                {% if loop.last and i < 6 %}
                    {% for i in i..5 %}
                        <div class='cdr-small'></div>
                        {% set i=i+1 %}
                    {% endfor %}
                {% endif %}
            {% endfor %}
        </div>

        <div class="col-sm-2">
            <div class='cdr-medium'>
                {% for sd in stuff.stuffdetails %}
                    {% if sd.item is defined and sd.item is not empty and sd.item.itemtype.id == 1 %}
                        <img src="{{ asset(['bundles/dpmain/images/item/', sd.item.id, '.png']|join) }}" alt="{{ sd.item.name }} image not found" class="img-responsive img-item-medium item-{{ sd.item.itemtype.id }}-place" data-toggle="modal" data-target="#modal-item{{ sd.item.id }}" /><br>
                    {% endif %}
                {% endfor %}
            </div>

            <div class='cdr-medium'>
                {% for sd in stuff.stuffdetails %}
                    {% if sd.item is defined and sd.item is not empty and sd.item.itemtype.id == 4 %}
                        <img src="{{ asset(['bundles/dpmain/images/item/', sd.item.id, '.png']|join) }}" alt="{{ sd.item.name }} image not found" class="img-responsive img-item-medium item-{{ sd.item.itemtype.id }}-place" data-toggle="modal" data-target="#modal-item{{ sd.item.id }}" /><br>
                    {% endif %}
                {% endfor %}
            </div>
            <div class='cdr-medium'>
                {% for sd in stuff.stuffdetails %}
                    {% if sd.item is defined and sd.item is not empty and sd.item.itemtype.id == 2 and anneau is not defined %}
                        <img src="{{ asset(['bundles/dpmain/images/item/', sd.item.id, '.png']|join) }}" alt="{{ sd.item.name }} image not found" class="img-responsive img-item-medium item-{{ sd.item.itemtype.id }}-place" data-toggle="modal" data-target="#modal-item{{ sd.item.id }}" /><br>
                        {% set anneau = 1 %}
                    {% endif %}
                {% endfor %}
            </div>

            <div class='cdr-medium'>
                {% for sd in stuff.stuffdetails %}
                    {% if sd.item is defined and sd.item is not empty and sd.item.itemtype.id == 6 %}
                        <img src="{{ asset(['bundles/dpmain/images/item/', sd.item.id, '.png']|join) }}" alt="{{ sd.item.name }} image not found" class="img-responsive img-item-medium item-{{ sd.item.itemtype.id }}-place" data-toggle="modal" data-target="#modal-item{{ sd.item.id }}" /><br>
                    {% endif %}
                {% endfor %}
            </div>

            <div class='cdr-medium'>
                {% for sd in stuff.stuffdetails %}
                    {% if sd.item is defined and sd.item is not empty and sd.item.itemtype.id == 3 %}
                        <img src="{{ asset(['bundles/dpmain/images/item/', sd.item.id, '.png']|join) }}" alt="{{ sd.item.name }} image not found" class="img-responsive img-item-medium item-{{ sd.item.itemtype.id }}-place" data-toggle="modal" data-target="#modal-item{{ sd.item.id }}" /><br>
                    {% endif %}
                {% endfor %}
            </div>
        </div>

        <div class="col-sm-3">
            <img src="{{ asset(['bundles/dpmain/images/perso/', stuff.classe.name|slugify ~ '-femme', '.png']|join) }}" alt="{{ stuff.classe.name|slugify }} femme image not found" class="" />
        </div>

        <div class="col-sm-3">
            <img src="{{ asset(['bundles/dpmain/images/perso/', stuff.classe.name|slugify ~ '-homme', '.png']|join) }}" alt="{{ stuff.classe.name|slugify }} homme image not found" class="" />
        </div>

        <div class="col-sm-2">
            <div class='cdr-medium'>
                {% for sd in stuff.stuffdetails %}
                    {% if sd.item is defined and sd.item is not empty and sd.item.itemtype.id == 7 %}
                        <img src="{{ asset(['bundles/dpmain/images/item/', sd.item.id, '.png']|join) }}" alt="{{ sd.item.name }} image not found" class="img-responsive img-item-medium item-{{ sd.item.itemtype.id }}-place" data-toggle="modal" data-target="#modal-item{{ sd.item.id }}" /><br>
                    {% endif %}
                {% endfor %}
            </div>

            <div class='cdr-medium'>
                {% for sd in stuff.stuffdetails %}
                    {% if sd.item.itemtype.itemglobaltype.id is defined and sd.item.itemtype.itemglobaltype.id is not empty and sd.item.itemtype.itemglobaltype.id == 2 %}
                        <img src="{{ asset(['bundles/dpmain/images/item/', sd.item.id, '.png']|join) }}" alt="{{ sd.item.name }} image not found" class="img-responsive img-item-medium item-{{ sd.item.itemtype.id }}-place" data-toggle="modal" data-target="#modal-item{{ sd.item.id }}" /><br>
                    {% endif %}
                {% endfor %}
            </div>

            <div class='cdr-medium'>
                {% for sd in stuff.stuffdetails %}
                    {% if sd.item is defined and sd.item is not empty and sd.item.itemtype.id == 2 %}
                        {% if anneau is defined and anneau == 2 %}
                            <img src="{{ asset(['bundles/dpmain/images/item/', sd.item.id, '.png']|join) }}" alt="{{ sd.item.name }} image not found" class="img-responsive img-item-medium item-{{ sd.item.itemtype.id }}-place" data-toggle="modal" data-target="#modal-item{{ sd.item.id }}" /><br>
                        {% else %}
                            {% set anneau = 2 %}
                        {% endif %}
                    {% endif %}
                {% endfor %}
            </div>

            <div class='cdr-medium'>
                {% for sd in stuff.stuffdetails %}
                    {% if sd.item is defined and sd.item is not empty and sd.item.itemtype.id == 5 %}
                        <img src="{{ asset(['bundles/dpmain/images/item/', sd.item.id, '.png']|join) }}" alt="{{ sd.item.name }} image not found" class="img-responsive img-item-medium item-{{ sd.item.itemtype.id }}-place" data-toggle="modal" data-target="#modal-item{{ sd.item.id }}" /><br>
                    {% endif %}
                {% endfor %}
            </div>

            <div class='cdr-medium'>
                {% for sd in stuff.stuffdetails %}
                    {% if sd.item.itemtype.itemglobaltype is defined and sd.item.itemtype.itemglobaltype is not empty and sd.item.itemtype.itemglobaltype.id == 3 %}
                        <img src="{{ asset(['bundles/dpmain/images/item/', sd.item.id, '.png']|join) }}" alt="{{ sd.item.name }} image not found" class="img-responsive img-item-medium ride-place" data-toggle="modal" data-target="#modal-item{{ sd.item.id }}" /><br>
                    {% endif %}
                {% endfor %}
            </div>
        </div>
    </div>
    <div class="jumbotron col-sm-4">
        <h3>Caractéristiques</h3>
        <ul class="characteristicList">
            <li class="" title="Minimum {{ totalCharacteristics.Vitalité.min|default(0) }} PV">
                <span class="sprite-carac sprite-vitalite"></span>
                <span class="characteristicTitle">Points de vie</span>
                <span class="characteristic">{{ totalCharacteristics.Vitalité.max|default(0) }}</span>
            </li>
            <li class="" title="Minimum {{ totalCharacteristics.PA.min|default(0) }} PA">
                <span class="sprite-carac sprite-pa"></span>
