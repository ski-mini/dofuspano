                <span class="characteristic">{{ totalCharacteristics.PM.max|default(0) }}</span>
            </li>
            <li class="" title="Minimum {{ totalCharacteristics.PO.min|default(0) }} PO">
                <span class="sprite-carac sprite-po"></span>
                <span class="characteristicTitle">PO</span>
                <span class="characteristic">{{ totalCharacteristics.PO.max|default(0) }}</span>
            </li>
            <li class="" title="Minimum {{ totalCharacteristics['Coups Critiques']['min']|default(0) }} CC">
                <span class="sprite-carac sprite-cc"></span>
                <span class="characteristicTitle">Coups Critiques</span>
                <span class="characteristic">{{ totalCharacteristics['Coups Critiques']['max']|default(0) }}</span>
            </li>
            <li class="" title="Minimum {{ totalCharacteristics.Initiative.min|default(0) }} Ini">
                <span class="sprite-carac sprite-initiative"></span>
                <span class="characteristicTitle">Initiative</span>
                <span class="characteristic">{{ totalCharacteristics.Initiative.max|default(0) }}</span>
            </li>
            <li class="" title="Minimum {{ totalCharacteristics.Prospection.min|default(0) }} PP">
                <span class="sprite-carac sprite-prospection"></span>
                <span class="characteristicTitle">Prospection</span>
                <span class="characteristic">{{ totalCharacteristics.Prospection.max|default(0) }}</span>
            </li>
            <li class="" title="Minimum {{ totalCharacteristics.Invocations.min|default(0) }} CI">
                <span class="sprite-carac sprite-invocations"></span>
                <span class="characteristicTitle">Invocations</span>
                <span class="characteristic">{{ totalCharacteristics.Invocations.max|default(0) }}</span>
            </li>
        </ul>

        <ul class="characteristicList">
            <li class="" title="Minimum {{ totalCharacteristics.Sagesse.min|default(0) }} Sa">
                <span class="sprite-carac sprite-sagesse"></span>
                <span class="characteristicTitle">Sagesse</span>
                <span class="characteristic">{{ totalCharacteristics.Sagesse.max|default(0) }}</span>
            </li>
            <li class="" title="Minimum {{ totalCharacteristics.Force.min|default(0) }} Fo">
                <span class="sprite-carac sprite-force"></span>
                <span class="characteristicTitle">Force</span>
                <span class="characteristic">{{ totalCharacteristics.Force.max|default(0) }}</span>
            </li>
            <li class="" title="Minimum {{ totalCharacteristics.Intelligence.min|default(0) }} Int">
                <span class="sprite-carac sprite-intelligence"></span>
                <span class="characteristicTitle">Intelligence</span>
                <span class="characteristic">{{ totalCharacteristics.Intelligence.max|default(0) }}</span>
            </li>
            <li class="" title="Minimum {{ totalCharacteristics.Chance.min|default(0) }} Cha">
                <span class="sprite-carac sprite-chance"></span>
                <span class="characteristicTitle">Chance</span>
                <span class="characteristic">{{ totalCharacteristics.Chance.max|default(0) }}</span>
            </li>
            <li class="" title="Minimum {{ totalCharacteristics.Agilité.min|default(0) }} Agi">
                <span class="sprite-carac sprite-agilite"></span>
                <span class="characteristicTitle">Agilité</span>
                <span class="characteristic">{{ totalCharacteristics.Agilité.max|default(0) }}</span>
            </li>
        </ul>
    </div>
</div>