<div class="bs-content">

    {{ form_start(form, {'attr': {'class' : 'form-horizontal'}}) }}
        {{ form_errors(form) }}

        <div class="form-group">
            <div class="col-sm-offset-1 col-sm-10 input-group">
                <div class="input-group-addon" style="width:15%;">Titre</div>
                {{ form_errors(form.name) }}
                {{ form_widget(form.name) }}
            </div>
        </div>

        <div class="form-group">
            <div class="col-sm-offset-1 col-sm-10 input-group">
                <div class="input-group-addon" style="width:15%;">Mots cl√©s</div>
                {{ form_errors(form.keyword) }}
                {{ form_widget(form.keyword) }}
            </div>
        </div>

        <div class="form-group">
            <div class="col-sm-offset-1 col-sm-10 nopadding" style="padding-bottom:5px;">Description</div>
            <div class="col-sm-offset-1 col-sm-10 col-sm-offset-1 nopadding">
                {{ form_errors(form.description) }}
                {{ form_widget(form.description) }}
