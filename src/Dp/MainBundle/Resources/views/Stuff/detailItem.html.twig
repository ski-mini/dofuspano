<article class="modal fade" id="modal-item{{ item.id }}" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                <h4 class="modal-title" id="myModalLabel">{{ item.name }} {{ item.itemtype.name }} - Niveau {{ item.lvl }}</h4>
            </div>
            <div class="modal-body">
                <img src="{{ asset(['bundles/dpmain/images/item/', item.id, '.png']|join) }}" alt="{{ item.name }} image not found" class="img-responsive img-item-medium" />
                <br>
                Effets
                <ul>
                    {% if overtype is not empty %}
                            <li class="over">1 {{ overtype}}</li>
                        {% endif %}
                    {% for effect in item.effects %}
                        <li>{% if effect.valuemin == effect.valuemax %}{{ effect.valuemin }}{% else %}{{ effect.valuemin }} Ã  {{ effect.valuemax }}{% endif %} {% if effect.effecttype.name is defined %}{{ effect.effecttype.name }}{% elseif effect.textvalue is defined and effect.textvalue is not empty %}{{ effect.textvalue }}{% endif %}</li>
                    {% endfor %}
                </ul>
                {% if item.panoply.name is defined and item.panoply.name is not empty %}Panoplie : {{ item.panoply.name }}{% endif %}
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-default" data-dismiss="modal">Fermer</button>
            </div>
        </div>
    </div>
</article>